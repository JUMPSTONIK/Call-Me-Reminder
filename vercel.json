{
  "$schema": "https://openapi.vercel.sh",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "env": [
    "NEXT_PUBLIC_API_URL"
  ],
  "framework": "nextjs",
  "functions": {
    "app/**/*.{js,ts,jsx,tsx}": {
      "maxDuration": 60
    }
  },
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "publicSource": "./public",
  "regions": [
    "iad1"
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://call-me-reminder-backend.onrender.com/api/:path*"
    }
  ],
  "redirects": [],
  "root": "frontend",
  "skipDownloadingServerless": false
}
